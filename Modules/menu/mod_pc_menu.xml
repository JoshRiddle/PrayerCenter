<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0.0" client="site" method="upgrade">
	<name>PrayerCenter Menu</name>
	<author>Douglas Machado</author>
	<creationDate>August 2013</creationDate>
	<copyright>(C) 2007 PIB7Joinville. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorUrl>www.PIB7Joinville.com.br</authorUrl>
	<version>3.0.0</version>
	<description>MOD_PC_MENU_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_pc_menu">mod_pc_menu.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
    <folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_pc_menu.ini</language>
		<language tag="en-GB">en-GB.mod_pc_menu.sys.ini</language>	
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_PC_MENU_FIELD_MODCLASS_LABEL" description="MOD_PC_MENU_FIELD_MODCLASS_DESC"></field>
				<field name="menu_style" type="list" default="0" label="MOD_PC_MENU_FIELD_MENUSTYLE_LABEL" description="MOD_PC_MENU_FIELD_MENUSTYLE_DESC">
      		<option value="0">MOD_PC_MENU_FIELD_MENUSTYLE_OPTION1_LABEL</option>
      		<option value="1">MOD_PC_MENU_FIELD_MENUSTYLE_OPTION2_LABEL</option>
        </field>
				<field name="show_view" class="radio btn-group" type="radio" default="1" label="MOD_PC_MENU_FIELD_SHOWVIEW_LABEL" description="MOD_PC_MENU_FIELD_SHOWVIEW_DESC">
    			<option value="0">No</option>
    			<option value="1">Yes</option>
		    </field>
				<field name="show_submit" class="radio btn-group" type="radio" default="1" label="MOD_PC_MENU_FIELD_SHOWSUBMIT_LABEL" description="MOD_PC_MENU_FIELD_SHOWSUBMIT_DESC">
    			<option value="0">No</option>
    			<option value="1">Yes</option>
    		</field>
				<field name="show_subscribe" class="radio btn-group" type="radio" default="1" label="MOD_PC_MENU_FIELD_SHOWSUBSCRIBE_LABEL" description="MOD_PC_MENU_FIELD_SHOWSUBSCRIBE_DESC">
    			<option value="0">No</option>
    			<option value="1">Yes</option>
    		</field>
				<field name="show_links" class="radio btn-group" type="radio" default="1" label="MOD_PC_MENU_FIELD_SHOWLINKS_LABEL" description="MOD_PC_MENU_FIELD_SHOWLINKS_DESC">
    			<option value="0">No</option>
    			<option value="1">Yes</option>
    		</field>
				<field name="show_devotion" class="radio btn-group" type="radio" default="1" label="MOD_PC_MENU_FIELD_SHOWDEVOTION_LABEL" description="MOD_PC_MENU_FIELD_SHOWDEVOTION_DESC">
    			<option value="0">No</option>
    			<option value="1">Yes</option>
    		</field>
				<field name="show_moderator" class="radio btn-group" type="radio" default="1" label="MOD_PC_MENU_FIELD_SHOWMODERATOR_LABEL" description="MOD_PC_MENU_FIELD_SHOWMODERATOR_DESC">
    			<option value="0">No</option>
    			<option value="1">Yes</option>
    		</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="cache" type="list" default="0" label="MOD_PC_MENU_FIELD_CACHE_LABEL" description="MOD_PC_MENU_FIELD_CACHE_DESC">
    			<option value="1">MOD_PC_MENU_FIELD_CACHETIME_OPTION1_LABEL</option>
    			<option value="0">MOD_PC_MENU_FIELD_CACHETIME_OPTION2_LABEL</option>
    		</field>
				<field name="cache_time" type="text" default="15" label="MOD_PC_MENU_FIELD_CACHETIME_LABEL" description="MOD_PC_MENU_FIELD_CACHETIME_DESC"></field>
			</fieldset>
		</fields>
	</config>
</extension>