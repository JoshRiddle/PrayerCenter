<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0.0" client="site" method="upgrade">
	<name>PrayerCenter Latest Prayer Requests</name>
	<author>Mike Leeper</author>
	<creationDate>April 2013</creationDate>
	<copyright>(C) 2008-2013 MLWebTechnologies. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>web@mlwebtechnologies.com</authorEmail>
	<authorUrl>www.mlwebtechnologies.com</authorUrl>
	<version>3.0.0</version>
	<description>MOD_PC_LATEST_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_pc_latest">mod_pc_latest.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
    <folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_pc_latest.ini</language>
		<language tag="en-GB">en-GB.mod_pc_latest.sys.ini</language>	
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_PC_LATEST_FIELD_MODCLASS_LABEL" description="MOD_PC_MENU_FIELD_MODCLASS_DESC"></field>
				<field name="@spacer" type="spacer" default="" label="" description=""></field>
				<field name="count" type="text" size="6" default="3" label="MOD_PC_LATEST_FIELD_COUNT_LABEL" description="MOD_PC_LATEST_FIELD_COUNT_DESC"></field>
				<field name="word_count" type="text" size="6" default="12" label="MOD_PC_LATEST_FIELD_WORDCOUNT_LABEL" description="MOD_PC_LATEST_FIELD_WORDCOUNT_DESC"></field>
			</fieldset>
			<fieldset name="advanced">
				<field name="cache" type="list" default="0" label="MOD_PC_LATEST_FIELD_CACHE_LABEL" description="MOD_PC_MENU_FIELD_CACHE_DESC">
    			<option value="1">MOD_PC_LATEST_FIELD_CACHETIME_OPTION1_LABEL</option>
    			<option value="0">MOD_PC_LATEST_FIELD_CACHETIME_OPTION2_LABEL</option>
    		</field>
				<field name="cache_time" type="text" default="15" label="MOD_PC_LATEST_FIELD_CACHETIME_LABEL" description="MOD_PC_MENU_FIELD_CACHETIME_DESC"></field>
			</fieldset>
		</fields>
	</config>
</extension>